rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Configuración: Bloqueado totalmente al cliente público.
    // Solo accesible vía Admin SDK (Cloud Functions) o consola de Firebase.
    // Licencia: Lectura pública (crítico para verificar antes de login), escritura prohibida.
    match /settings/license {
      allow read: if true;
      allow write: if true;
    }

    // Configuración de campos de empleados: lectura pública, escritura solo autenticados
    match /settings/employeeFields {
      allow read: if true;
      allow write: if true;
    }
    
    // Asistencia: Lectura pública (para Admin sin login), escritura solo autenticados
    match /attendance/{id} {
      allow read, write: if true;
    }

    // Fotos de Asistencia/Incidentes: Lectura pública, escritura solo autenticados (ahora pública para auto-borrado Admin PC)
    match /fotos/{id} {
      allow read: if true;
      allow write: if true;
    }

    // Incidentes: Lectura pública, escritura solo autenticados
    match /incidents/{id} {
      allow read, write: if true;
    }
    
    // Empleados: Lectura pública (para Admin sin login), ESCRITURA PROHIBIDA (Solo Backend)
    match /employees/{id} {
      allow read: if true;
      allow write: if false;
    }
    
    // Resto de documentos requieren autenticación
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
