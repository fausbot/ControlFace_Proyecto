rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Configuración: Bloqueado totalmente al cliente público.
    // Solo accesible vía Admin SDK (Cloud Functions) o consola de Firebase.
    match /settings/config {
      allow read, write: if false;
    }
    
    // Asistencia: Lectura pública (para Admin sin login), escritura solo autenticados
    match /attendance/{id} {
      allow read: if true;  // Permitir lectura pública
      allow write: if request.auth != null;  // Escritura solo para autenticados
    }
    
    // Resto de documentos requieren autenticación
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
