rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir acceso a carpetas de asistencia e incidentes (soporta plural/singular)
    match /{folder}/{allPaths=**} {
      allow read, write: if request.auth != null 
        && (folder == 'asistencia' || folder == 'asistencias' || folder == 'incidentes');
    }
  }
}
