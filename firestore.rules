rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Configuración: Bloqueado totalmente al cliente público.
    // Solo accesible vía Admin SDK (Cloud Functions) o consola de Firebase.
    // Licencia: Lectura pública (crítico para verificar antes de login), escritura prohibida.
    match /settings/license {
      allow read: if true;
      allow write: if false;
    }

    // Configuración de campos de empleados: lectura pública, escritura solo autenticados
    match /settings/employeeFields {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Asistencia: Lectura pública (para Admin sin login), escritura solo autenticados
    match /attendance/{id} {
      allow read: if true;  // Permitir lectura pública
      allow write: if request.auth != null;  // Escritura solo para autenticados
    }
    
    // Empleados: Lectura solo autenticados, ESCRITURA PROHIBIDA (Solo lo hace el Backend/Cloud Functions)
    match /employees/{id} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Resto de documentos requieren autenticación
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
